{
  "compilerOptions": {
    "target": "ES6",                      // Specifies the output language level (ES6 here).
    "module": "ESNext",                   // Use ES module system.
    "moduleResolution": "node",           // Resolve modules like Node.js
    "strict": true,                       // Enable strict type-checking
    "esModuleInterop": true,              // Allows default imports from modules that don't have a default export
    "skipLibCheck": true,                 // Skip checking declaration files (speeds up compilation)
    "resolveJsonModule": true,            // Allow importing JSON files
    "allowJs": true,                      // Allow JavaScript files to be compiled
    "jsx": "react",                       // Enable JSX if you're using React
    "outDir": "./dist",                   // Output directory for compiled files
    "baseUrl": ".",                       // Base directory for relative imports
    "paths": {
      "*": ["node_modules/*", "src/types/*"]  // Include custom types folder if needed
    }
  },
  "include": ["src/**/*"],               // Specify which files to include in compilation (your src folder)
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist folders
}
